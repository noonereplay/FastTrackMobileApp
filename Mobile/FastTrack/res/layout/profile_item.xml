<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

	        <ImageView
	            android:id="@+id/profile_item_img"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:paddingLeft="5dp"
	            android:src="@drawable/trends" 
	            android:contentDescription="@string/trend_icon_text"/>

	        <TextView
	            android:id="@+id/profile_item_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/profile_item_img"
	            android:layout_centerHorizontal="true"
	            android:paddingLeft="20dp"
	            android:text="@string/hello_blank_fragment"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	        
	        <TextView
	            android:id="@+id/profile_sub_item_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/profile_item_text"
	            android:layout_toRightOf="@+id/profile_item_img"
	            android:paddingLeft="20dp"
	            android:text="@string/hello_blank_fragment"
	            android:textAppearance="?android:attr/textAppearanceMedium" 
	            />


	        
</RelativeLayout>
